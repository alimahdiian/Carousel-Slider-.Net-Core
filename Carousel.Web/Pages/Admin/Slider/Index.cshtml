@page
@model Carousel.Web.Pages.Admin.Slider.IndexModel
@{
    ViewData["Title"] = "Sliders";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="slidertitle font-weight-bold">List of Sliders</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row ">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="text-center sliderfont mb-5"></h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body well">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="table-responsive">
                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                <div class="row">
                                </div>
                                <div>
                                    <a asp-page="CreateSlider"
                                       class="btn btn-success mb-1 ml-5">
                                        Add a new Slider
                                    </a>
                                </div>
                                <form method="post">
                                    <table class="table table-striped table-bordered
                           table-hover dataTable no-footer"
                                           id="dataTables-example" aria-describedby="dataTables-example_info">
                                        <thead>
                                            <tr role="row">
                                                <th>Image</th>
                                                <th>Title </th>
                                                <th> Url </th>
                                                <th>Start Date </th>
                                                <th>End Date</th>
                                                <th>Active</th>
                                                <th>Command</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var slide in Model.SliderList)
                                            {
                                                <tr>
                                                    <td>
                                                        <img src="~/Slider/@slide.ImageName" class="sliderimg" />
                                                    </td>
                                                    <td>@slide.SliderTitle</td>
                                                    <td>@slide.Url</td>
                                                    <td>@slide.StartDate.ToShortDateString()</td>
                                                    <td>@slide.EndDate.ToShortDateString() </td>
                                                    <td>
                                                        @if (slide.IsActive)
                                                        {
                                                            <p class="alert alert-success small">Yes</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="alert alert-danger small">No</p>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a class="text-warning"
                                                           asp-route-Id="@slide.SliderId" asp-page="EditSlider">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button class="text-danger" asp-page-handler="DeleteSlider"
                                                                asp-route-Id="@slide.SliderId">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                        <!-- /.table-responsive -->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
<div class="mt-2">
    <a href="/" class="btn btn-outline-info">Back To Home </a>
</div>
<br />
<div class="mb-5"></div>



